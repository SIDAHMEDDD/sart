<div class="template-details">
  <h1 class="title">{{template.name}} Responsive {{template.category}}</h1>
  <p class="details">
    Type:&nbsp;&nbsp;<span class="red">{{template.category}}</span>
    &nbsp;|&nbsp;
    Author:&nbsp;&nbsp;<a href="#">{{template.uploadedBy}}</a>
    &nbsp;|&nbsp;
    Downloads:&nbsp;&nbsp;<span class="red">{{template.downloadRank}}</span>
  </p>
  <img src={{template.pictureLink}} class="titleimg" alt=""/>
  <div class="controlls">
    <a class="dwn" href="#">Download</a>
    <a class="prv" href="#">Preview</a>
  </div>
  <h2 class="similiar">Details</h2>
  <div class="details">
    <h4>Features</h4>
    <hr>
    <ul>
      <li id="highlighted"><h6>Design: </h6></li>
      <li><h6>Features: </h6></li>
      <li id="highlighted"><h6>Language Support: </h6></li>
    </ul>
    <h4>Sources Available</h4>
    <hr>
    <ul>
      <li><h6 id="badge">HTML CSS</h6></li>
    </ul>
    <h4>Software Required</h4>
    <hr>
    <ul>
      <li><h6>Adobe Photoshop CS+</h6></li>
      <li id="highlighted"><h6>Sublime, Atom</h6></li>
      <li><h6>7-Zip, Atom</h6></li>
    </ul>

  </div>
  <h2 class="similiar">Similiar Templates</h2>
  <div class="templates rel clearfix">
    {{#each related}}
      <div class="template">
        <img alt={{this.pictureLink}} src={{this.pictureLink}} />
        <a class="name" href="/templates/view/{{ this.id }}">{{this.name}}</a>
        <p>{{this.category}}</p>
        <p id="downloads">{{this.downloadRank}} Downloads</p>
      </div>
    {{/each}}
  </div>
</div>
