<!DOCTYPE html>
<html>
  <head>
    <title>
      {{#if user}}
        Home
      {{else}}
        SART, big gallery of websites.
      {{/if}}
    </title>
    <link rel='stylesheet' href='/stylesheets/css/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script type="text/javascript" src="/vendor/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/behaviors.js"></script>
  </head>
  <body>
    <nav class="main">
      {{#if user}}
        <a href="/" class="logo">SART</a>
        {{#ifCond user.userType  "Normal"}}
          <a href="/" class="m-item {{class1}}">Home</a>
        {{else}}
          <a href="/dashboard/main" class="m-item {{class1}}">Dashboard</a>
        {{/ifCond}}
        <a href="/templates" class="m-item {{class3}}">Templates</a>
        <a href="/about" class="m-item {{class4}}">About</a>
        {{utype}}
        <a href="/users/logout" class="right m-item">Logout</a>
      {{else}}
        <a href="/" class="logo">SART</a>
        <a href="/" class="m-item {{class1}}">Overview</a>
        <a href="/templates" class="m-item {{class3}}">Templates</a>
        <a href="/about" class="m-item {{class4}}">About</a>
        <a href="/users/login" class="right m-item lin">Log in</a>
        <a href="/users/register" class="right m-item lin">Sign up</a>
      {{/if}}
      <a href="#" class="nvb-collapse right"><i class="fa fa-bars" aria-hidden="true"></i></a>
    </nav>
    {{{body}}}
  </body>
</html>
